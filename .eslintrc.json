{
    "extends": [
        "@abhijithvijayan/eslint-config",
        "@abhijithvijayan/eslint-config/react"
    ],
    "rules": {
        "linebreak-style": 0,
        "react/jsx-props-no-spreading": 0,
        "no-unused-expressions": [
            "error",
            {
                "allowShortCircuit": true
            }
        ],
        "prettier/prettier": [
            "error",
            {
                "arrow-parens": "as-needed",
                "endOfLine": "auto",
                "printWidth": 80,
                "tabWidth": 2,
                "semi": true,
                "singleQuote": true,
                "trailingComma": "es5",
                "bracketSpacing": true,
                "jsxBracketSameLine": false
            }
        ]
    }
}