{
  "extends": [
    "@abhijithvijayan/eslint-config/typescript"
  ],
  "rules": {
    "linebreak-style": 0,
    "react/jsx-props-no-spreading": 0,
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".tsx",
          ".ts"
        ]
      }
    ],
    "no-unused-expressions": [
      "error",
      {
        "allowShortCircuit": true
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "arrow-parens": "as-needed",
        "endOfLine": "auto",
        "printWidth": 80,
        "tabWidth": 2,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "jsxBracketSameLine": false
      }
    ]
  }
}